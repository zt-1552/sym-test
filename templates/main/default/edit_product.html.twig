{% extends 'main/base.html.twig' %}

{% block title %}Homepage - RankedChoice{% endblock %}
{% block page_keywords %}Jeans, Jackets{% endblock %}
{% block page_description %}Main page of RankedChoice shop!{% endblock %}

{% block body %}
    <div class="container-fluid mt-2">
        <div class="row">
            <div class="col-lg-6">
                <h3>Edit product</h3>
                {{ form_start(form) }}
                    <div class="form-control">
                        <i class="fa fa-calendar"></i> {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}

                        <small>{{ form_help(form.title) }}</small>

                        <div class="form-error">
                            {{ form_errors(form.title) }}
                        </div>
                    </div>
                    <div class="form-control">
                        <i class="fa fa-calendar"></i> {{ form_label(form.price) }}
                        {{ form_widget(form.price) }}

                        <small>{{ form_help(form.price) }}</small>

                        <div class="form-error">
                            {{ form_errors(form.price) }}
                        </div>
                    </div>
                    <div class="form-control">
                        <i class="fa fa-calendar"></i> {{ form_label(form.quantity) }}
                        {{ form_widget(form.quantity) }}

                        <small>{{ form_help(form.quantity) }}</small>

                        <div class="form-error">
                            {{ form_errors(form.quantity) }}
                        </div>
                    </div>

                    {{ form_row(form.decription) }}
                    {{ form_row(form.isPublished) }}
                    {{ form_row(form.isDeleted) }}

                    <input type="submit" value="send">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
